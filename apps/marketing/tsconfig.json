{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/lib/*": ["../../lib/*"],
      "@cej/i18n": ["../../packages/i18n/src/index.ts"],
      "@cej/i18n/*": ["../../packages/i18n/src/*"],
      "@cej/ui": ["../../packages/ui/src/index.ts"],
      "@cej/ui/*": ["../../packages/ui/src/*"]
    },
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["**/*"]
}
